<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@mipmap/background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_weight="0.08"
        android:gravity="center|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Acceleration"
            android:id="@+id/textView"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number"
            android:id="@+id/Acceleration"
            android:layout_marginLeft="100dp"
            android:textColor="@color/abc_search_url_text_normal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:gravity="center|center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Breaking"
            android:id="@+id/textView3"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number"
            android:id="@+id/Breaking"
            android:layout_marginLeft="120dp"
            android:textColor="@color/abc_search_url_text_normal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Speed"
            android:id="@+id/textView5"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number"
            android:id="@+id/Speed"
            android:layout_marginLeft="120dp"
            android:textColor="@color/abc_search_url_text_normal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.28"
        android:gravity="center|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shifting"
            android:id="@+id/textView7"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Text"
            android:id="@+id/Shifting"
            android:layout_marginLeft="120dp"
            android:textColor="@color/abc_search_url_text_normal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="114dp"
        android:layout_height="82dp"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:measureWithLargestChild="false"
        android:layout_weight="0.16">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/CallButtonResult"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/nhchsggdskyd"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="openCallScreen"
            android:scaleType="fitCenter"
            android:background="#00000000" />
    </LinearLayout>

</LinearLayout>