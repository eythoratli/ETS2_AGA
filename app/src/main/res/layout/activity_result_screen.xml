<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@mipmap/babba">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trip result"
        android:id="@+id/trip_result"
        android:layout_weight="0.35"
        android:gravity="center"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/imageView8"
        android:src="@mipmap/bordi"
        android:scaleType="fitXY" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:id="@+id/aveshiftresultlayout"
        android:background="#26D1D1D1"
        android:focusableInTouchMode="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Average Shifting"
            android:id="@+id/aveshiftresulttext"
            android:layout_gravity="center_vertical|left"
            android:paddingRight="170dp"
            android:textColor="#383838" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="75"
            android:id="@+id/aveshiftresult"
            android:layout_gravity="center_vertical"
            android:textColor="#383838" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="#26383838" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Breaking"
            android:id="@+id/breakingresulttext"
            android:layout_gravity="center_vertical|left"
            android:paddingRight="231dp"
            android:textColor="#d1d1d1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="81"
            android:id="@+id/breakingresult"
            android:layout_gravity="center_vertical"
            android:textColor="#d1d1d1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:id="@+id/phoneusagelayoutresultscreen"
        android:background="#26D1D1D1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Phone Usage"
            android:id="@+id/phoneusageresultscreen"
            android:layout_gravity="center_vertical|left"
            android:paddingRight="195dp"
            android:textColor="#383838" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="38"
            android:id="@+id/phoneusageresult"
            android:layout_gravity="center_vertical"
            android:textColor="#383838" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:id="@+id/fatiguresultscreenlayout"
        android:background="#26383838" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fatigue"
            android:id="@+id/fatigueresultscreentext"
            android:layout_gravity="center_vertical|left"
            android:paddingRight="242dp"
            android:textColor="#d1d1d1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="58"
            android:id="@+id/fatigueresult"
            android:layout_gravity="center_vertical"
            android:textColor="#d1d1d1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="#26D1D1D1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Acceleration"
            android:id="@+id/accelresultscreentext"
            android:layout_gravity="center_vertical|left"
            android:paddingRight="201dp"
            android:textColor="#383838" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="79"
            android:id="@+id/accelresultscreen"
            android:layout_gravity="center_vertical"
            android:textColor="#383838" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:id="@+id/fuelresultscreenlayout"
        android:background="#40383838" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fuel Consumption"
            android:id="@+id/fuelresultscreentext"
            android:layout_gravity="center_vertical|left"
            android:paddingRight="83dp"
            android:textColor="#d1d1d1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10L/100km"
            android:id="@+id/fuelresultscreen"
            android:layout_gravity="center_vertical"
            android:textColor="#d1d1d1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="#66D1D1D1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Average Speed"
            android:id="@+id/avespresultscreentext"
            android:layout_gravity="center_vertical|left"
            android:paddingRight="132dp"
            android:textColor="#383838" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="92 km/h"
            android:id="@+id/avespeedresultscreen"
            android:layout_gravity="center_vertical"
            android:textColor="#383838" />
    </LinearLayout>

</LinearLayout>